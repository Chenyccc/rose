.home{
  display: flex;
  flex-direction: column;
  width: 100%;
  border-radius: 2px;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: fixed;
  bottom: 0;
  background: rgba(165, 162, 162, 0.7);
}

.root {
    width: 100%;
    height: 100%;
    background-color: #70c7da;
    position: relative;
}

.background-image{
    overflow: hidden;
    position: fixed;
    margin: 0px;
    height : 100%;
    /* position: absolute; */
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
}