/* pages/master_log/master_log.wxss */
input{
  width: 270rpx;
  margin-left: 10px;
  border-bottom: 1rpx solid rgb(0, 0, 0);
  height: 50rpx;
}
.log{
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  text-align: center;
}
.btn-hover{
  position: relative;
  top: 2rpx;
  box-shadow:0px 0px 8px rgb(202, 202, 202) inset; 
}
.acc{
  margin-top: 300rpx; 
  overflow: hidden;
  font-size: 40rpx;
  margin-left: 100rpx;
  margin-right:100rpx;
  color: rgb(0, 0, 0);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.info{
  font-size: 20rpx;
}
.mima{
  margin-top: 30rpx;
  overflow: hidden;
  margin-left: 100rpx;
  margin-right:100rpx;
  color: rgb(0, 0, 0);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}

.master{
  margin-top: 100rpx;
  margin-left: 285rpx;
  height: 65rpx;
  background: linear-gradient(to top left, rgb(253, 141, 141), rgb(255, 195, 83));
  color: rgb(0, 0, 0);
  text-align: center;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
  font-size: 35rpx;
}

.root {
    width: 100%;
    height: 100%;
    background-color: #70c7da;
    position: relative;
}

.background-image{
    overflow: hidden;
    position: fixed;
    margin: 0px;
    height : 100%;
    /* position: absolute; */
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
}
