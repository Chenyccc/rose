/* pages/log/log.wxss */
button:not([size='mini']) {
  width: 100px;
  margin-left: auto;
  margin-right: auto;
}
.user{
  margin-top: 80vh;
  background: linear-gradient(to top left, rgb(253, 141, 141), rgb(255, 195, 83));
  color: rgb(0, 0, 0);
  border-radius: 10px;
  font-size: 35rpx;
}
.manage{
  margin-top: 150rpx;
  margin-left: 200rpx;
  height: 80rpx;
  background: #ffe601;
  color: rgb(0, 0, 0);
  text-align: center;
  width: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
  font-size: 45rpx;
}
.btn-hover{
  position: relative;
  top: 2rpx;
  box-shadow:0px 0px 8px rgb(202, 202, 202) inset; 
}
.help{
  display: flex;
  flex-direction: column;
  margin-left: 650rpx;
  font-size: 40rpx;
  width: 100rpx;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.root {
    width: 100%;
    height: 100%;
    background-color: #70c7da;
    position: relative;
}

.background-image{
    overflow: hidden;
    position: fixed;
    margin: 0px;
    height : 100%;
    /* position: absolute; */
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
}